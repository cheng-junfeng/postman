<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/all_item_gray_selector"
    android:clickable="true"
    android:layout_margin="@dimen/offset_3dp">

    <com.custom.widget.MultiEditInputView
        android:layout_below="@id/hm_root"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mev_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:padding="5dp"
        app:contentHeight="100dp"
        app:contentText=""
        app:hintText="{input}"
        app:maxCount="200" />
</RelativeLayout>