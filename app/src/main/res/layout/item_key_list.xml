<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_item_gray_selector"
    android:layout_margin="1dp"
    android:clickable="true"
    android:minHeight="@dimen/offset_20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/data_item_height"
        android:gravity="center_horizontal"
        android:padding="@dimen/offset_5dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tx_key"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Key"
            android:padding="@dimen/offset_3dp"
            android:maxLines = "14"
            android:scrollbars = "vertical"
            android:ellipsize="end"
            android:textColor="@color/color_light_black" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=":"
            android:padding="@dimen/offset_3dp"
            android:maxLines = "14"
            android:scrollbars = "vertical"
            android:ellipsize="end"
            android:textColor="@color/color_light_black"
            android:textSize="5pt"/>
        <TextView
            android:id="@+id/tx_value"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Value"
            android:padding="@dimen/offset_3dp"
            android:maxLines = "14"
            android:scrollbars = "vertical"
            android:ellipsize="end"
            android:textColor="@color/color_light_black"
            android:textSize="5pt"/>
        <ImageView
            android:id="@+id/tx_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_close"
            android:gravity="center"
            android:padding="@dimen/offset_3dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/hm_root"
        android:background="@color/color_light_gray" />
</RelativeLayout>