<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_item_gray_selector"
    android:clickable="true"
    android:minHeight="@dimen/offset_20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/data_item_height"
        android:gravity="center_horizontal"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/hm_key"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:background="@color/color_gray"
            android:padding="@dimen/offset_3dp"
            android:hint="key"
            android:textColor="@color/color_light_black" />
        <EditText
            android:id="@+id/hm_value"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_marginLeft="@dimen/offset_3dp"
            android:layout_height="match_parent"
            android:background="@color/color_gray"
            android:padding="@dimen/offset_3dp"
            android:hint="value"
            android:textColor="@color/color_light_black" />
        <ImageView
            android:id="@+id/tx_delete"
            android:layout_width="0dp"
            android:layout_weight="0.6"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_close"
            android:gravity="center"
            android:padding="@dimen/offset_3dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/hm_root"
        android:background="@color/color_light_gray" />
</RelativeLayout>