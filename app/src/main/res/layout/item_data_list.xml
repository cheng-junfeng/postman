<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/all_item_gray_selector"
    android:clickable="true"
    android:minHeight="@dimen/data_margin_height">
    <LinearLayout
        android:id="@+id/hm_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/data_item_height"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/offset_3dp"
            android:paddingBottom="@dimen/offset_3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_left"
                android:background="@drawable/type_blue"
                android:textColor="@color/color_white"
                android:paddingLeft="@dimen/offset_3dp"
                android:paddingRight="@dimen/offset_3dp"
                android:gravity="start"
                android:text="GET" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/margin_left"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hm_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="2018-4-8 18:00" />
            </LinearLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/colorAccent"
            android:layout_marginStart="@dimen/offset_10dp"
            android:layout_marginEnd="@dimen/offset_10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/data_item_height_small"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Input" />

            <TextView
                android:id="@+id/tx_input"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="{int}" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/data_item_height_small"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_marginRight="@dimen/margin_left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Output" />

            <TextView
                android:id="@+id/tx_output"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="{output}" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/hm_root"
        android:background="@color/color_light_gray" />
</RelativeLayout>