<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@color/color_light_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:paddingStart="@dimen/offset_10dp"
            android:paddingEnd="@dimen/offset_10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start|top"
                android:layout_gravity="center"
                android:text="{}"
                android:maxLines = "5"
                android:scrollbars = "vertical"
                android:ellipsize="end"
                android:textColor="@color/color_light_black"
                android:textSize="10pt"/>
        </LinearLayout>
        <View style="@style/DeepUnderLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="@dimen/offset_5dp"
            android:paddingBottom="@dimen/offset_5dp"
            android:paddingStart="@dimen/offset_10dp"
            android:paddingEnd="@dimen/offset_10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dialog_output"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="start|top"
                android:layout_gravity="center"
                android:text="{}"
                android:maxLines = "5"
                android:scrollbars = "vertical"
                android:ellipsize="end"
                android:textColor="@color/color_light_black"
                android:textSize="10pt"/>
        </LinearLayout>
        <View style="@style/DeepUnderLine" />
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_button_height"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/base_default"
                android:text="Close"
                android:textColor="@color/color_light_white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
