<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@color/color_light_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/data_item_height"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/offset_3dp"
            android:paddingBottom="@dimen/offset_3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hm_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_left"
                android:background="@drawable/type_green"
                android:textColor="@color/color_white"
                android:paddingLeft="@dimen/offset_3dp"
                android:paddingRight="@dimen/offset_3dp"
                android:gravity="start"
                android:text="GET" />

            <TextView
                android:id="@+id/hm_url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin_left"
                android:layout_marginRight="@dimen/margin_left"
                android:maxLines="1"
                android:ellipsize="end"
                android:background="@drawable/type_green"
                android:textColor="@color/color_white"
                android:paddingLeft="@dimen/offset_3dp"
                android:paddingRight="@dimen/offset_3dp"
                android:gravity="start"
                android:text="http://172.16.93.16:8080/test" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="@color/colorAccent"
            android:layout_marginStart="@dimen/offset_10dp"
            android:layout_marginEnd="@dimen/offset_10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:padding="@dimen/offset_5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialog_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_gray"
                android:gravity="start|top"
                android:layout_gravity="center"
                android:text="{}"
                android:padding="@dimen/offset_3dp"
                android:maxLines = "14"
                android:scrollbars = "vertical"
                android:ellipsize="end"
                android:textColor="@color/color_light_black"
                android:textSize="5pt"/>
        </LinearLayout>
        <View style="@style/DeepUnderLine" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/offset_5dp"
            android:paddingBottom="@dimen/offset_5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dialog_output"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@color/color_gray"
                android:gravity="start|top"
                android:layout_gravity="center"
                android:text="{}"
                android:padding="@dimen/offset_3dp"
                android:maxLines = "14"
                android:scrollbars = "vertical"
                android:ellipsize="end"
                android:textColor="@color/color_light_black"
                android:textSize="5pt"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/base_button_height"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/base_default"
                android:text="Close"
                android:textColor="@color/color_light_white"
                android:textSize="@dimen/text_size_large" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
